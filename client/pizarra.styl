body
  margin 0px
  padding 0px
  background #EEE
  font-family Arial

#superior-y-lateral
  height 24px
  border-bottom 1px solid #999
  background-color #DDD

#superior
  display inline-block
  padding 3px
  vertical-align top
  
#lateral
  width 24px
  height 100%
  border-right 1px solid #999
  background-color #DDD
  float left
  
#central
  height 100%
  background #EF8

.rectangulito
  border 1px dashed black
  min-height 50px
  min-width 50px
  position absolute
  font-size 300%
  border 1px solid #9E9
  user-select none
  padding 4px

[suave=si]
  transition all 0.5s