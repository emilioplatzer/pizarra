{
  "name": "pizarra",
  "description": "One big web pizarra (board)",
  "version": "0.0.1",
  "author": "Emilio Platzer <emilioplatzer@googlegroups.com>",
  "license": "MIT",
  "repository": "emilioplatzer/pizarra",
  "main": "server/pizarra-server.js",
  "dependencies": {
    "fs-extra": "0.26.6",
    "fs-promise": "0.5.0",
    "jade": "~1.11.0",
    "read-yaml-promise": "1.0.2",
    "stylus": "~0.54.2",

    "backend-plus": "0.0.4",
    "best-promise": "0.2.4",
    "extension-serve-static": "0.1.6",
    "mini-tools": "0.2.3"
  },
  "devDependencies": {
    "expect.js": "~0.3.1",
    "istanbul": "~0.4.2",
    "mocha": "~2.4.5"
  },
  "engines": {
    "node": ">= 0.12.0"
  },
  "scripts": {
    "test": "mocha --reporter spec --bail --check-leaks test/",
    "test-ci": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --reporter spec --check-leaks test/",
    "test-cov": "istanbul cover node_modules/mocha/bin/_mocha -- --reporter dot --check-leaks test/",
    "start": "node server/pizarra-server.js"
  },
  "jshintConfig": {
    "asi": false,
    "forin": true,
    "curly": true,
    "esversion": 6
  },
  "eslintConfig": {
    "env": {
      "node": false
    },
    "rules": {
      "strict": 0,
      "no-console": 1,
      "no-unused-vars": 1
    },
    "parserOptions": {
      "ecmaVersion": 6
    }
  },
  "qa-control": {
    "package-version": "0.1.4",
    "coverage": 90,
    "run-in": "server",
    "stability": "extending",
    "type": "app"
  }
}
