{
  "name": "pizarra",
  "description": "One big web pizarra (board)",
  "version": "0.0.2",
  "author": "Emilio Platzer <emilioplatzer@googlegroups.com>",
  "license": "MIT",
  "repository": "emilioplatzer/pizarra",
  "main": "server/pizarra-server.js",
  "dependencies": {
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "pug": "^3.0.2",
    "read-yaml-promise": "^1.0.2",
    "stylus": "~0.55.0",
    "ws": "^8.2.2",
    "like-ar": "^0.3.5",
    "serve-content": "^0.3.14",
    "mini-tools": "^1.11.1"
  },
  "devDependencies": {
    "@types/node": "^16.9.1",
    "@types/express": "^4.17.13",
    "@types/ws": "^7.4.7",
    "types.d.ts": "^0.6.3",
    "expect.js": "~0.3.1",
    "nyc": "^15.1.0",
    "mocha": "~9.2.2"
  },
  "engines": {
    "node": ">= 0.12.0"
  },
  "scripts": {
    "test": "mocha --reporter spec --bail --check-leaks test/",
    "test-ci": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --reporter spec --check-leaks test/",
    "test-cov": "istanbul cover node_modules/mocha/bin/_mocha -- --reporter dot --check-leaks test/",
    "start": "node server/pizarra-server.js"
  },
  "jshintConfig": {
    "asi": false,
    "forin": true,
    "curly": true,
    "esversion": 6
  },
  "eslintConfig": {
    "env": {
      "node": false
    },
    "rules": {
      "strict": 0,
      "no-console": 1,
      "no-unused-vars": 1
    },
    "parserOptions": {
      "ecmaVersion": 6
    }
  },
  "qa-control": {
    "package-version": "0.1.4",
    "coverage": 90,
    "run-in": "server",
    "stability": "extending",
    "type": "app"
  }
}
